<%= form_with(model: url, local: true) do |form| %>
  <% if url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
        <% url.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <div> Enter a URL to minify: </div>
    <%= form.text_field :original_url %>
  </div>

  <div class="field">
    <div>Customize your link: (Optional)</div>
    <div class="container">
    <div class="container-item"><input type="text" value="<%=Rails.application.config.url%>/" disabled></div>
    <div class="container-item"><%= form.text_field :short_url, :placeholder => "url alias" %></div>
    </div>
  </div>

  <div class="field">
    <%= form.label :created_by %>
    <%= form.text_field :created_by %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
