<div class="show card">
  <div class="card-header">
    Walah
    <i class="bi bi-magic"></i>
  </div>
  <div class="card-body">
    <h5 >Your Minified Link:</h5>
    <div class="input-group flex-nowrap">
      <span class="input-group-text" id="addon-wrapping"><i class="bi bi-link-45deg"></i></span>
      <input id="urlLink" type="text" class="form-control" value=<%= @url.short_url %> aria-label="mini-url" aria-describedby="addon-wrapping" readonly>
    </div>
    <button type="button" class="clipboard-btn btn btn-primary" onclick="copyToClipboard()">Copy Link</button>
  </div>
</div>

<script>
  function copyToClipboard() {
    var copyText = document.getElementById("urlLink")
    copyText.select()
    navigator.clipboard.writeText(copyText.value).then(function () {
      alert("Copied the text: " + copyText.value)
    }, function (err) {
      alert("Uh-Oh: Failed to copy to clipboard")
    })
  }
</script>